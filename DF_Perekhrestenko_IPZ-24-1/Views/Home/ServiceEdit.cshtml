@model DF_Perekhrestenko_IPZ_24_1.Models.service

<h2>Редагування послуги</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdService) 

    <div class="form-horizontal">
        <div class="form-group">
            <label>Назва послуги:</label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label>Вартість:</label>
            @Html.TextBoxFor(model => model.Price, "{0:0}", new { @class = "form-control" }) 
        </div>

        <div class="form-group">
            <br />
            <input type="submit" value="Зберегти зміни" class="btn btn-info" />
        </div>
    </div>
}