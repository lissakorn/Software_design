@model DF_Perekhrestenko_IPZ_24_1.Models.service

@{
    ViewBag.Title = "Додати послугу";
}

<h2>Додавання нової послуги готелю</h2>

@using (Html.BeginForm("ServiceInsert", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label>Назва послуги:</label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label>Вартість (грн):</label>
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <br />
            <input type="submit" value="Зберегти" class="btn btn-primary" />
        </div>
    </div>
}