@model DF_Perekhrestenko_IPZ_24_1.Models.providedService

<div class="jumbotron">
    <h2>Призначити послугу клієнту</h2>
    <hr />

    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>Оберіть номер бронювання (зв'язок з Bookings):</label>
            @Html.DropDownList("IdBooking", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Оберіть послугу (зв'язок з Services):</label>
            @Html.DropDownList("IdService", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <br />
            <input type="submit" value="Зберегти замовлення" class="btn btn-success" />
        </div>
    }
</div>