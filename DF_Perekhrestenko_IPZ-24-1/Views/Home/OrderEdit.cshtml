@model DF_Perekhrestenko_IPZ_24_1.Models.providedService

<h2>Редагування замовлення послуги</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdProvidedService)

    <div class="form-horizontal">
        <div class="form-group">
            <label>Номер бронювання:</label>
            @Html.DropDownList("IdBooking", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Послуга:</label>
            @Html.DropDownList("IdService", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            <br />
            <input type="submit" value="Зберегти зміни" class="btn btn-info" />
        </div>
    </div>
}