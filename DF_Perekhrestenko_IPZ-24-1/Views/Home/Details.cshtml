@model DF_Perekhrestenko_IPZ_24_1.Models.client

@{
    ViewBag.Title = "Деталі клієнта";
}

<h2>Повна інформація про клієнта</h2>

<div class="card" style="margin-bottom: 20px;">
    <div class="card-body">
        <h4 class="card-title">@Model.Surname @Model.Name</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Паспорт:</dt>
            <dd>@Model.Passport</dd>

            <dt>Телефон:</dt>
            <dd>@Model.Phone</dd>

            <dt>Email:</dt>
            <dd>@Model.Email</dd>

            <dt>Дата реєстрації:</dt>
            <dd>@Model.Regestration</dd>
        </dl>
    </div>
</div>

<h3>Історія бронювань</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID Бронювання</th>
            <th>Кімнати</th>
            <th>Дата заїзду</th>
            <th>Дата виїзду</th>
            <th>Статус</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.bookings)
        {
            <tr>
                <td>@b.IdBooking</td>
                <td>@(b.room != null ? b.room.Number : "Не вказано")</td>
                <td>@b.CheckIn.ToShortDateString()</td>
                <td>@b.CheckOut.ToShortDateString()</td>
                <td>
                    @if (b.Status == "Active" && DateTime.Now > b.CheckOut)
                    {
                        <span class="label label-default">Завершено</span>
                    }
                    else if (b.Status == "Active")
                    {
                        <span class="label label-success">Активне</span>
                    }
                    else
                    {
                        <span class="label label-danger">@b.Status</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Назад до списку", "Clients", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Редагувати", "Edit", new { id = Model.IdClient }, new { @class = "btn btn-default" })
</p>