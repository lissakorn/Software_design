@model IEnumerable<DF_Perekhrestenko_IPZ_24_1.Models.Zakaz>

@{
    ViewBag.Title = "Усі замовлення";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Керування замовленнями</h2>

        @if (Session["UserRole"]?.ToString() == "HotelAdmin" || Session["UserRole"]?.ToString() == "Receptionist")
        {
            @Html.ActionLink("Створити нове замовлення", "Create", null, new { @class = "btn btn-success" })
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>№ Кімнати</th>
                        <th>Опис замовлення</th>
                        <th>Дата</th>
                        <th>Статус</th>
                        <th>Відповідальний</th>
                        <th class="text-center">Управління</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.RoomNumber</strong></td>
                            <td>@item.Description</td>

                            <td>@item.OrderDate</td>

                            <td>
                                @if (item.IsDone)
                                {
                                    <span class="badge bg-success">Виконано</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">В процесі</span>
                                }
                            </td>
                            <td>
                                @if (item.Staff != null)
                                {
                                    @item.Staff.FullName
                                }
                                else
                                {
                                    <span class="text-muted">Не призначено</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (Session["UserRole"]?.ToString() == "HotelAdmin" || Session["UserRole"]?.ToString() == "Receptionist")
                                {
                                    @Html.ActionLink("Редагувати", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm me-1" })
                                    @Html.ActionLink("Деталі", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm text-white me-1" })
                                }

                                @if (Session["UserRole"]?.ToString() == "HotelAdmin")
                                {
                                    @Html.ActionLink("Видалити", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>